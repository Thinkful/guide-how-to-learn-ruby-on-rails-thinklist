<h1>Listings</h1>

<table class="table table-striped">
  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= link_to listing.title, listing %></td>
        <td class="text-right">
          <% if listing.price %>
            $<%= listing.price %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
