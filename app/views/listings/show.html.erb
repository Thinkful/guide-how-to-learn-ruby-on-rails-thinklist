<% if notice %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>

<p>
  <strong>Title:</strong>
  <%= @listing.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @listing.description %>
</p>

<% if @listing.price %>
  <p>
    <strong>Price:</strong>
    <%= @listing.price %>
  </p>
<% end %>

<%= link_to 'Edit', edit_listing_path(@listing), class: 'btn btn-default' %>
